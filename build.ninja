srcdir = src
builddir = bin
incdir = include
cxx = clang++
cxxflags = -Wall -W -O2 -std=c++11

rule cxx
  command = $cxx $cxxflags -c $srcdir/$out.cpp -o $builddir/$out.o $link

rule link
  command = $cxx -o $builddir/$out $in

build lexer/tokenstream: cxx
  link = -I$incdir/lexer

build hello: cxx

build lllld: link bin/lexer/tokenstream.o bin/hello.o
